<div class="container">
  <div class="col-xs-12 text-center">
    <h1>Contatos</h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nome</th>
        <th scope="col">Telefone</th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each do |contact| %>
        <tr>
          <td><%= contact.name %></td>
          <td><%= contact.phone %></td>
          <td><%= link_to 'Editar', edit_contact_path(contact), class: 'btn btn-warning' %></td>
          <%= link_to 'Excluir', contact_path(contact), method: :delete, class: 'btn btn-danger', data: { confirm: "Deseja mesmo excuir este contato?"} %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>